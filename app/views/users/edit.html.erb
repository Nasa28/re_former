
<%= form_with(model: @user) do |form| %>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder: "put your username"%><br><br>
  <%= form.label :email, "Email:" %>
  <%= form.email_field :email, placeholder: "example@example.com" %><br><br>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder: "type your password" %><br><br>
  <%= form.submit "Submit" %>
<% end %>

